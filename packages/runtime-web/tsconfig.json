{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "es6",
    "module": "esnext",
    "lib": ["webworker"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "baseUrl": "../..",
    "paths": {
      "@splootcode/*": ["packages/*"]
    }
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../runtime-python"
    }
  ]
}
