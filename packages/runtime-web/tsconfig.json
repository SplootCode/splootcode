{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["DOM", "ES2020", "webworker"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@splootcode/*": ["../*"]
    }
  }
}
