{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@splootcode/*": ["../*"]
    }
  },
  "references": [
    {
      "path": "../core"
    },
  ]
}
