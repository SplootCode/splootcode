{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "es6",
    "module": "esnext",
    // "lib": ["dom", "es2015", "es2016", "webworker"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "baseUrl": "../..",
    "paths": {
      "@splootcode/*": ["packages/*"]
    },
  },
  "references": [
    {
      "path": "../core"
    },
  ]
}
