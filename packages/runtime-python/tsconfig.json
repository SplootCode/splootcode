{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["DOM", "ES2020", "webworker"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "baseUrl": ".",
  },
  "exclude": [
    "node_modules",
    "dist",
    "packages",
    "lib",
    "*.config.*"
  ],
}
