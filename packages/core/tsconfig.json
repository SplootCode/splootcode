{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@splootcode/*": ["../*"]
    }
  },
  "include": [
    "code_io/**/*",
    "language/**/*",
    "colors.ts",
  ],
}
