{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "es6",
    "module": "esnext",
    "lib": ["es2019"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@splootcode/*": ["../*"]
    }
  },
  "references": [
    {
      "path": "../core"
    },
  ],
  "include": [
    "code_io/**/*",
    "types/**/*",
    "javascript_node.ts",
    "type_loader.ts"
  ],
}
