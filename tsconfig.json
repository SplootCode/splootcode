{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["dom", "ES2020", "webworker"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "types": ["vite/client", "jest", "@types/wicg-file-system-access"]
  },
  "ts-node": {
    "esm": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "ES2020",
  },
  "include": ["src", "src-runtime", "scripts"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-runtime",
    "packages"
  ],
}
