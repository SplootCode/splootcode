{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["dom", "ES2020", "webworker"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@splootcode/editor/*": ["packages/editor/*"],
      "@splootcode/language-python/*": ["packages/language-python/*"],
      "@splootcode/language-web/*": ["packages/language-web/*"],
      "@splootcode/runtime-python/*": ["packages/runtime-python/*"],
    },
    "types": ["vite/client", "jest", "@types/wicg-file-system-access"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "dist-runtime"
  ],
  "rootDir": "src",
}
